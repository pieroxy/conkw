<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" metadata-complete="true">
<absolute-ordering />

  <listener>
    <listener-class>net.pieroxy.webmon.Listener</listener-class>
  </listener>


  <servlet>
    <servlet-name>api</servlet-name>
    <servlet-class>net.pieroxy.webmon.Api</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>api</servlet-name>
    <url-pattern>/api</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>emi</servlet-name>
    <servlet-class>net.pieroxy.webmon.Emi</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>emi</servlet-name>
    <url-pattern>/emi</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>0</session-timeout>
  </session-config>

</web-app>